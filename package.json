{
	"name": "my-starter",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write",
		"check-types": "turbo run check-types",
		"knip": "knip",
		"db:push": "cd packages/db && bun run db:push",
		"db:studio": "cd packages/db && bun run db:studio",
		"db:generate": "cd packages/db && bun run db:generate",
		"db:migrate": "cd packages/db && bun run db:migrate"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.4",
		"@types/bun": "^1.2.6",
		"@types/node": "^24.10.0",
		"knip": "^5.67.1",
		"lefthook": "^2.0.2",
		"turbo": "^2.6.0",
		"typescript": "^5.9.3"
	},
	"engines": {
		"node": ">=18"
	},
	"packageManager": "bun@1.3.1",
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"react": "^19.2.0",
			"react-dom": "^19.2.0",
			"typescript": "5.9.2",
			"@orpc/server": "^1.10.0",
			"@orpc/client": "^1.10.0",
			"@orpc/openapi": "^1.10.0",
			"@orpc/zod": "^1.10.0",
			"dotenv": "^16.4.5",
			"better-auth": "^1.3.34",
			"hono": "^4.10.4"
		},
		"catalogs": {
			"react-types": {
				"@types/react": "^19.2.2",
				"@types/react-dom": "^19.2.2"
			},
			"tailwind": {
				"tailwindcss": "^4.1.16",
				"@tailwindcss/vite": "^4.1.16"
			},
			"vite": {
				"vite": "^7.1.12",
				"@vitejs/plugin-react": "^5.1.0",
				"vite-tsconfig-paths": "^5.1.4"
			},
			"types": {
				"@types/node": "^24.10.0",
				"@types/bun": "latest"
			}
		}
	}
}
